{
  "name": "washroom-app",
  "version": "1.0.3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.office.washroomstatus",
    "productName": "Washroom Status App",
    "icon": "toilet.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "noooobcoderr",
        "repo": "washroom-app"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@azure/msal-node": "^3.6.2",
    "electron-auto-launch": "^5.0.7",
    "electron-updater": "^6.6.2",
    "google-auth-library": "^10.1.0",
    "googleapis": "^150.0.1",
    "open": "^10.1.2",
    "ws": "^8.18.3"
  }
}
